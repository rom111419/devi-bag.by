{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "typedocOptions": {
    "entryPoints": [
      "projects/ritm/src"
    ],
    "out": "dist/ritm/src/assets/docs",
    "exclude": "projects/ritm/**/*+(.spec|.e2e|polyfills|test).ts",
    "readme": "projects/ritm/README.md",
    "hideGenerator": "true",
    "plugin": "none",
    "watch": true,
    "includes": "projects/ritm/src/assets/docsfiles",
    "theme": "node_modules/typedoc-neo-theme/bin/default",
    "highlightTheme": "dark-plus"
  }
}
